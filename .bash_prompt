#!/usr/bin/env bash

########################
## COLOR/CUSTOMIZE PROMPT
########################
reset=$(tput sgr0)
bold=$(tput bold)
red=$(tput setaf 1)
green=$(tput setaf 2)
magenta=$(tput setaf 5)
cyan=$(tput setaf 6)
white=$(tput setaf 7)

# SSH is CYAN, local is RED
if [ -n "$SSH_CLIENT" ] || [ -n "$SSH_TTY" ]; then
    session_color=$cyan
else
    session_color=$red
fi


cd () { builtin cd "$@" && chpwd; }
pushd () { builtin pushd "$@" && chpwd; }
popd () { builtin popd "$@" && chpwd; }

# Show directories 2 layers deep
chpwd () {
  case $PWD in
    $HOME) HPWD="~";;
    $HOME/*/*) HPWD="${PWD#"${PWD%/*/*}/"}";;
    $HOME/*) HPWD="~/${PWD##*/}";;
    /*/*/*) HPWD="${PWD#"${PWD%/*/*}/"}";;
    *) HPWD="$PWD";;
  esac
}

PS1='\[$reset\]\[$white\][\[$session_color\]$HPWD\[$white\]] â†’\[$reset\] '
cd # this is to trigger evaluation of chpwd when shell comes up


{
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.cwd | split(\"/\") | last' | xargs -I {} notify-send -i claude-code -u low -t 5000 'Claude Code [{}]' 'Needs permission - check terminal'"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.cwd | split(\"/\") | last' | xargs -I {} notify-send -i claude-code -u low -t 5000 'Claude Code [{}]' 'Waiting for input'"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bd prime"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "typescript-lsp@claude-plugins-official": true,
    "superpowers@claude-plugins-official": true
  }
}

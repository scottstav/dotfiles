{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 10,
  "control-center-margin-bottom": 10,
  "control-center-margin-right": 10,
  "control-center-margin-left": 0,
  "control-center-width": 420,
  "control-center-height": 800,
  "notification-window-width": 400,
  "notification-icon-size": 48,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "timeout": 8,
  "timeout-low": 4,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "notification-grouping": true,
  "script-fail-notify": true,
  "text-empty": "No Notifications",
  "notification-visibility": {
    "kdeconnect-clipboard": {
      "state": "muted",
      "app-name": "KDE Connect",
      "body-regex": "clipboard"
    }
  },
  "widgets": [
    "title",
    "dnd",
    "mpris",
    "buttons-grid",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": "Clear All"
    },
    "dnd": {
      "text": "Do Not Disturb"
    },
    "mpris": {
      "image-size": 96,
      "image-radius": 8,
      "blur": true
    },
    "buttons-grid": {
      "actions": [
        {
          "label": "",
          "type": "normal",
          "command": "hyprlock"
        },
        {
          "label": "󰌌",
          "type": "normal",
          "command": "foot --app-id=fzf-picker -e show-keybinds"
        },
        {
          "label": "󱚿",
          "type": "toggle",
          "command": "sh -c 'if [ \"$SWAYNC_TOGGLE_STATE\" = \"true\" ]; then vpn-toggle on; else vpn-toggle off; fi'",
          "update-command": "vpn-toggle status"
        },
        {
          "label": "󰈈",
          "type": "toggle",
          "command": "sh -c 'if [ \"$SWAYNC_TOGGLE_STATE\" = \"true\" ]; then caffeine-toggle on; else caffeine-toggle off; fi'",
          "update-command": "caffeine-toggle status"
        }
      ]
    },
    "notifications": {
      "vexpand": true
    }
  }
}
